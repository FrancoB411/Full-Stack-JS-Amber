<section>
	<form class="form-horizontal">
		<div class="control-group">
			<label class="control-label" for="title">Title</label>
		
			<div class="controls">
				<input type="text" id="title" {{bind-attr value=title}} placeholder="Title" required>
				
				</input>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="articleContent">Body Content</label>
			<div class="controls">
				{{textarea id="articleContent" value=articleContent cols="30" rows="10" placeholder="Article Content"}}
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button class="btn" {{action 'editArticle'}}>Update</button>
			</div>
		</div>
	</form>
</section>
